    "@jest/globals": "^29.5.0",
    "@tsconfig/esm": "^1.0.2",
    "@tsconfig/recommended": "^1.0.2",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.11.9",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.4"
